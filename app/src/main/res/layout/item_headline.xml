<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_headline"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/material_margin">

    <ImageView
        android:id="@+id/image_headline"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/txt_headline_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Headline Title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/image_headline"
        app:layout_constraintEnd_toEndOf="parent"
        android:maxLines="2"
        android:ellipsize="end"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_marginStart="@dimen/material_margin"
        />

    <TextView
        android:id="@+id/txt_headline_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Description description description description description description description"
        android:maxLines="2"
        android:ellipsize="end"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintTop_toBottomOf="@id/txt_headline_title"
        app:layout_constraintStart_toStartOf="@id/txt_headline_title"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:id="@+id/txt_headline_author"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="by Yomi Joseph"
        android:maxLines="2"
        android:ellipsize="end"
        android:gravity="end"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:layout_marginTop="@dimen/material_margin"
        app:layout_constraintTop_toBottomOf="@id/txt_headline_desc"
        app:layout_constraintStart_toStartOf="@id/txt_headline_title"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>